@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1> Engineer </h1>

<h2>Edit the Engineer: @Html.DisplayFor(model => model.EngineerName)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  
