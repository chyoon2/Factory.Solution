@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h2>No Machines Have Been Added Yet</h2>
}

<ul>
@foreach(Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Show", new {id = machine.MachineId});</li>
}
</ul>

@Html.ActionLink("Add new Machine", "Create")
@Html.ActionLink("Home", "Index", "Home")